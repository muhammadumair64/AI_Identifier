<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/_15sdp"
    android:backgroundTint="@color/white"
    android:layout_margin="@dimen/_3sdp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_20sdp">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/lottieAnimationView3"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            app:layout_constraintTop_toTopOf="parent"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/saved_anim"
            app:lottie_repeatMode="restart"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            android:fontFamily="@font/nunito_semi_bold"
            android:gravity="center"
            android:text="Successfully Saved"
            android:textColor="@color/dark_text"
            android:textSize="@dimen/_18sdp"
            app:layout_constraintTop_toBottomOf="@+id/lottieAnimationView3"
            tools:layout_editor_absoluteX="26dp" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_7sdp"
            android:fontFamily="@font/nunito_regular"
            android:gravity="center"
            android:paddingHorizontal="@dimen/_30sdp"
            android:text="View all identified images\nat one place"
            android:textColor="@color/dark_gray_color"
            android:textSize="@dimen/_13sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView16" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:orientation="horizontal"
            android:weightSum="2"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView17"
            tools:layout_editor_absoluteX="26dp">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/stroke_theme_button_bg"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center"
                android:paddingVertical="@dimen/_9sdp"
                android:text="Cancel"
                android:textColor="@color/primary"
                android:textSize="@dimen/_13sdp" />

            <TextView
                android:id="@+id/view_history"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_6sdp"
                android:layout_weight="1"
                android:background="@drawable/primary_color_button_bg"
                android:fontFamily="@font/nunito_medium"
                android:gravity="center"
                android:paddingVertical="@dimen/_9sdp"
                android:text="View History"
                android:textColor="@color/white"
                android:textSize="@dimen/_13sdp" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>