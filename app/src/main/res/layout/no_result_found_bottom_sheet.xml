<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mainLayout"
    android:background="@color/secondary"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="@dimen/_20sdp"
    tools:ignore="hardcodedText">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_115sdp"
        android:src="@drawable/no_result_icon"
        android:layout_marginVertical="@dimen/_7sdp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_5sdp"
        android:fontFamily="@font/nunito_semi_bold"
        android:gravity="center"
        android:text="Oops.. Not Found"
        android:textColor="@color/dark_text"
        android:textSize="@dimen/_19sdp"
        app:layout_constraintBottom_toTopOf="@+id/textView4"
        tools:layout_editor_absoluteX="26dp" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_20sdp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="We are extremely sorry that we couldn’t find what you were looking for. But don’t worry, we will update our collection soon."
        android:textColor="@color/light_text"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toTopOf="@+id/btn_scan_again"
        tools:layout_editor_absoluteX="39dp" />

    <TextView
        android:id="@+id/btn_scan_again"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:background="@drawable/primary_color_button_bg"
        android:fontFamily="@font/nunito_semi_bold"
        android:gravity="center"
        android:paddingVertical="@dimen/_10sdp"
        android:text="Scan Again"
        android:textColor="@color/white"
        android:textSize="@dimen/_13sdp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>